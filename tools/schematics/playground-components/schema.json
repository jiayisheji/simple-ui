{
  "$schema": "http://json-schema.org/schema",
  "id": "playground-components",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "组件名称",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "组件使用名字?"
    },
    "project": {
      "type": "string",
      "description": "项目的名称",
      "default": "simple-ui-doc",
      "$default": {
        "$source": "projectName"
      }
    }
  },
  "required": [
    "name"
  ]
}